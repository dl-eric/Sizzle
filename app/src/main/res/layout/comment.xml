<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txtComment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:text="@string/lorem_ipsum"
        android:textSize="14sp"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/btnUpvote2"
        android:layout_below="@+id/txtComment"
        android:layout_toLeftOf="@+id/btnDownvote2"
        android:layout_toStartOf="@+id/btnDownvote2"
        android:textSize="12sp"
        android:background="@color/colorAccent"
        android:minHeight="30dp"
        android:minWidth="50dp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/btnDownvote2"
        android:layout_below="@+id/txtComment"
        android:layout_alignRight="@+id/txtComment"
        android:layout_alignEnd="@+id/txtComment"
        android:textSize="12sp"
        android:background="@color/colorAccent"
        android:minHeight="30dp"
        android:minWidth="50dp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:id="@+id/btnReport"
        android:layout_below="@+id/txtComment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:background="@color/colorAccent"
        android:minWidth="50dp"
        android:minHeight="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp" />

</RelativeLayout>